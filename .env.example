# MetaPM Environment Variables
# Copy this to .env and fill in values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# For local development (direct IP)
DB_SERVER=<cloud-sql-ip>
DB_NAME=MetaPM
DB_USER=sqlserver
DB_PASSWORD=<your-password>
DB_DRIVER=ODBC Driver 18 for SQL Server

# ===========================================
# GCP CONFIGURATION
# ===========================================

GCP_PROJECT_ID=<your-gcp-project-id>
CLOUD_SQL_INSTANCE=<project-id>:<region>:<instance-name>

# ===========================================
# SECURITY
# ===========================================

# API Key for authentication (generate a secure random string)
API_KEY=<generate-secure-key>

# ===========================================
# APPLICATION
# ===========================================

ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS origins (comma-separated for production)
# CORS_ORIGINS=https://metapm.rentyourcio.com,https://localhost:3000
